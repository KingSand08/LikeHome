generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(dbgenerated()) @map("_id")
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id       String  @id @default(dbgenerated()) @map("_id")
  title    String
  content  String?
  author   User?   @relation(fields: [authorId], references: [id])
  authorId String?
}

